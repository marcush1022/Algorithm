/*************************************************************************************/
Count the number of prime numbers less than a non-negative number, n.
/*************************************************************************************/

class Solution
{
	public:
	int countPrimes(int n)
	{
		if(n<2)
			return 0;
		//vector<bool> notPrime(n, false);
		bool *notPrime=new bool[n];
		int count=0;
		
		for(int i=0; i<n; i++)
			notPrime[i]=false;
		
		int bound=sqrt(n);
		
		for(int i=2; i<n; i++)
		{
			if(!notPrime[i])
				count++;
			if(i>bound)
				continue;
			for(int j=i*i; j<n; j+=i)
				notPrime[j]=true;
		}
		
		return count;
	}
};
