/*******************************************************************************************************/
Implement pow(x, n).
/*******************************************************************************************************/

class Solution
{
	public:
	double myPow(double x, int n)
	{
		double res=1;
		if(n<0)
		{
			n=-n;
			x=1.0/x;
		}
		while(n>0)
		{
			if(n%2)
				res=res*x;
			n=n>>1;
			x*=x;
		}
		return res;
	}
};
