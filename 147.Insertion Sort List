/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* insertionSortList(ListNode* head) {
        if(head==NULL || head->next==NULL)
            return head;
        ListNode *pre, *p, *pNext;
        pre=head;
        p=head->next;
        head->next=NULL;
        while(p)
        {
		pNext=p->next;
		pre=head;
            	if(p->val<pre->val)
		{
			p->next=pre;
			head=p;
			p=pNext;
		}
		else
		{
			while(pre->next!=NULL && pre->next->val<p->val)  //attention
				pre=pre->next;
			p->next=pre->next;
			pre->next=p;
			p=pNext;
		}
        }
	return head;
    }
};
