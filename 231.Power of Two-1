/**********************************************************************/
Given an integer, write a function to determine if it is a power of two.
/**********************************************************************/

class Solution {
public:
    bool isPowerOfTwo(int n) {
        bool flag=true;
        if(n==1)
		    return true;
		if(n%2!=0 ||  n<=0)
			return false;
		
		while(n)
		{
			n=n/2;
			if(n%2==1 && n>1)
			{
				flag=false;
				break;
			}
		}
		
		return flag;
    }
};
