/********************************************************************************/
Given a linked list, determine if it has a cycle in it.

Follow up:
Can you solve it without using extra space?
/********************************************************************************/

class Solution {
public:
    bool hasCycle(ListNode *head) {
        ListNode *p=head, *q=head;
        while(1)
        {
            if(p)
                p=p->next;
            else
                return false;
            if(q)
                q=q->next;
            else
                return false;
            if(q)
                q=q->next;
            else
                return false;
            
            if(p==q)
                return true;
        }
    }
};
