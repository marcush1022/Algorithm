/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    vector<int> postorderTraversal(TreeNode* root) {
        vector<int> path;
		getPostorder(path, root);
		return path;
    }
private:
	void getPostorder(vector<int> &path,TreeNode* cur)
	{
		if(!cur)
			return;
		if(cur->left)
			getPostorder(path, cur->left);
		if(cur->right)
			getPostorder(path, cur->right);
		path.push_back(cur->val);
	}
};
